<Application x:Class="TaskEmployeeManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskEmployeeManagement"
             StartupUri="EmployeeWindow.xaml">
    
    <Application.Resources>
        <SolidColorBrush x:Key="ButtonsColor" Color="AliceBlue"/>
        <SolidColorBrush x:Key="LabelsColor" Color="DarkGoldenrod"/>

        <Style TargetType="Button" >
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Width" Value="150" />
        </Style>

        <Style TargetType="Label" >
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Width" Value="150" />
        </Style>

        <Style TargetType="TextBox" >
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Width" Value="150" />
        </Style>

    </Application.Resources>
    
</Application>
